class InvoiceItem {
  final String title;
  final double price;
  final String image;
  final String options;
  final String? note;

  InvoiceItem({
    required this.title,
    required this.price,
    required this.image,
    required this.options,
    this.note,
  });

  Map<String, dynamic> toMap() {
    return {
      'title': title,
      'price': price,
      'image': image,
      'options': options,
      'note': note ?? '',
      'timestamp': FieldValue.serverTimestamp(),
    };
  }
}